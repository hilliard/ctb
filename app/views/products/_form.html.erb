<div class="row">
  <div class="span5 offset3">



    <%= form_for(@product) do |f| %>
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :displayname %><br>
        <%= f.text_field :displayname %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_field :description %>
      </div>
      <div class="field">
        <%= f.label :location %><br>
        <%#= f.collection_select(:location, :location_name,  @locations, :id, :location_name, {:prompt => 'Select Location'}) %>
        <%= f.collection_select(:location, @locations, :location_name, :location_name ) %>
      </div>
      <div class="field">
        <%= f.label :model %><br>
        <%= f.text_field :model %>
      </div>
      <div class="field">
        <%= f.label :vendor %><br>
        <%= f.text_field :vendor %>
      </div>
      <div class="field">
        <%= f.label :supplier %><br>
        <%= f.text_field :supplier %>
      </div>
      <div class="field">
        <%= f.label :cost %><br>
        <%= f.text_field :cost %>
      </div>
      <div class="field">
        <%= f.label :value %><br>
        <%= f.text_field :value %>
      </div>
      <div class="field">
        <%= f.label :condition %><br>
        <%#= f.collection_select(:condition, :condition_name, @conditions, :condition_name, :condition_name,{:prompt => 'Select the condition of this product'}) %>
        <%= f.collection_select(:condition, @conditions, :condition_name, :condition_name ) %>
        <%#= f.text_field :condition %>
      </div>
      <div class="field">
        <%= f.label :status %><br>
        <%#= f.collection_select(:status, :status_name, @statuses, :status_name, :status_name,{:prompt => 'Select the status of this product'}) %>
        <%= f.collection_select(:status, @statuses, :status_name, :status_name ) %>
         <%#= f.text_field :status %>
      </div>
      <div class="field">
        <%= f.label :category %><br>
        <%= f.text_field :category %>
      </div>
      <div class="field">
        <%= f.label :color %><br>
        <%= f.text_field :color %>
      </div>
      <div class="field">
        <%= f.label :uom %><br>
        <%= f.text_field :uom %>
      </div>
      <div class="field">
        <%= f.label :user_id %><br>
        <%= f.text_field :user_id %>
      </div>
      <div class="field">
        <%= f.label :quantity %><br>
        <%= f.text_field :quantity %>
      </div>
      <div class="field">
        <%= f.label :acquired %><br>
        <%= f.date_select :acquired %>
      </div>
      <div class="field">
        <%= f.label :retired %><br>
        <%= f.date_select :retired %>
      </div>
      <div class="field">
        <%= f.label :note %><br>
        <%= f.text_area :note, :rows => 4 %>
      </div>
      <div class="field">
        <%= f.label :image_url %><br>
        <%= f.text_field :image_url %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
<% end %>
  </div>
</div>